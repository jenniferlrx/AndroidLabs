<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/chat_list"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_receive"
        android:layout_alignParentTop="true" />


    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:text="@string/chat_send" />

    <EditText
        android:id="@+id/newText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="3"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_receive"
        android:layout_toRightOf="@+id/btn_send"
        android:hint="@string/chat_hint">

    </EditText>

    <Button
        android:id="@+id/btn_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/chat_list"
        android:layout_alignParentBottom="true"
        android:text="@string/chat_receive" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/chat_list"
        android:id="@+id/fragmentLocation"/>


</RelativeLayout>